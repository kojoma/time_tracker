<p id="notice"><%= notice %></p>

<h1>Work Hours</h1>

<%= form_tag work_hours_path, :method => 'get', :class => 'form-inline' do %>
  <div class="form-group mx-sm-3 mb-2">
    <label for="project" class="sr-only">Project</label>
    <%= text_field_tag :project, params[:project], {:id => 'project', :class => 'form-control', :placeholder => "Project"} %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <label for="year" class="sr-only">Year</label>
    <%= text_field_tag :year, params[:year], {:id => 'year', :class => 'form-control', :placeholder => 'Year'} %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <label for="month" class="sr-only">Month</label>
    <%= text_field_tag :month, params[:month], {:id => 'month', :class => 'form-control', :placeholder => 'Month'} %>
  </div>

  <%= submit_tag "Search", {:class => 'btn btn-primary'} %>
<% end %>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Project</th>
      <th>Date</th>
      <th>Hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_hours.each do |work_hour| %>
      <tr>
        <td><%= work_hour.project %></td>
        <td><%= work_hour.date %></td>
        <td><%= work_hour.hour %></td>
        <td><%= link_to 'Show', work_hour %></td>
        <td><%= link_to 'Edit', edit_work_hour_path(work_hour) %></td>
        <td><%= link_to 'Destroy', work_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="lead">Total Hour: <%= @total %></p>

<%= link_to 'New Work Hour', new_work_hour_path %>
